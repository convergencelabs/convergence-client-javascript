{
  "compilerOptions": {
    "target": "es6",
    "module": "es6",
    "noImplicitAny": false,
    "preserveConstEnums": true,
    "outDir": "build",
    "sourceMap": true,
    "moduleResolution": "node",
    "downlevelIteration": true,
    "resolveJsonModule": true,
    "stripInternal": true,
    "removeComments": true,
    "lib": ["es2015", "dom", "es7"]
  },
  "exclude": [
    "node_modules",
    "build",
    "dist"
  ]
}