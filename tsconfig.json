{
  "version": "1.7.5",
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "preserveConstEnums": true,
    "outDir": "build",
    "sourceMap": true,
    "declaration": true,
    "moduleResolution": "node"
  },
  "exclude": [
    "node_modules",
    "build",
    "dist",
    "bower_components",
    "typings/main.d.ts",
    "typings/main"
  ],
  "bundles": {
    "app": {
      "files": ["main/ts/**/*.ts"],
      "config": {
        "declaration": true,
        "sourceMap": true
      }
    }
  }
}